    catch (err) {
      console.log(err);
    }
  });

  
inputLocation.addEventListener("click", ()=>{
    if(navigator.geolocation){
        inputLocation.value = "Allow to detect location";
        navigator.geolocation.getCurrentPosition(onSuccess, onError);
    }else{
      inputLocation.value = "Your browser not support";
    }
});

function onSuccess(position){
  inputLocation.value = "Detecting your location...";
    let {latitude, longitude} = position.coords;
    fetch(`https://api.opencagedata.com/geocode/v1/json?q=${latitude}+${longitude}&key=d33e29452ac640c19955a78f86bccd5b`)
    .then(response => response.json()).then(response =>{
        let allDetails = response.results[0].components;
        console.table(allDetails);
        let {state, city, road} = allDetails;
        inputLocation.value = `${state} ,${city},${road}`;
       
    }).catch(()=>{
      inputLocation.value = "Something went wrong";
    });
}

function onError(error){
    if(error.code == 1){
      inputLocation.value = "You denied the request";
    }else if(error.code == 2){
      inputLocation.value = "Location is unavailable";
    }else{
      inputLocation.value = "!Something went wrong";
    }
    inputLocation.value("disabled", "true");
}


signupForm.addEventListener("submit", async (event) => {
  event.preventDefault(); // Prevent default form submission

  try {
    const formData = new FormData(signupForm);
    const response = await fetch("/createServiceProvider", {
      method: "POST",
      body: formData,
    });

    if (response.ok) {
      // Handle successful response (optional)
      console.log("Form submitted successfully");
      // You can redirect the user to a new page here
    } else {
      console.error("Form submission failed");
    }
  } catch (error) {
    console.error("Error:", error);
  }
});
</script>
