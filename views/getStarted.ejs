<%- include('partials/userHeader'); -%>
<style>
    .content {
        margin: 100px auto;
        max-width: 900px;
        padding: 20px;
    }

    .container {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        border-radius: 5px;
        padding: 20px;
        margin: 20px auto;
    }

    h1 {
        color: #333;
        text-align: center;
        font-size: 24px;
        margin-top: 40px;
    }

    p {
        font-size: 18px;
        text-align: center;
    }

    .btn-get-started {
        background: linear-gradient(-100deg, #4158d0, #11245A);
        display: block;
        max-width: 400px;
        margin: 40px auto;
        padding: 10px 20px;
        color: #fff;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

    .btn-get-started:hover {
        background-color: #0056b3;
    }

    /* Responsive Styles */
    @media (min-width: 768px) {
        .content {
            margin: 100px auto;
        }

        .container {
            max-width: 500px;
        }
    }
</style>
<div class="content">
    <div class="container">
        <h1>Get Started</h1>
        <p>Join us today and explore wide range of services.</p>
        <a href="/signup" class="btn-get-started">Create Account</a>
    </div>
</div>
<%- include('partials/userFooter'); -%>
